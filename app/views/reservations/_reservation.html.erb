<div class="col" id="<%= dom_id reservation %>">
  <div class="card shadow-sm">
    <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="<%= reservation.vehicle.image %>" alt="">
    <div class="card-body">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <h4><%= reservation.vehicle.name %> <span class="badge bg-secondary"><%= reservation.vehicle.model %></span></h4>
          </div>
          <div class="col-12">
            <div class="row">
              <div class="col-12">
                <strong>Hours reservation:</strong>
                <%= reservation.hours_reservation %>
              </div>
              <div class="col-12">
                <strong>Status:</strong>
                <% if reservation.active %>
                <span class="badge bg-success">Active</span>
                <% else %>
                <span class="badge bg-danger">Inactive</span>
                <% end %>
              </div>
            </div>
          </div>
          <div class="col-12">
            <p class="text-end fs-5 fw-lighter m-0"><strong>Total:</strong><span class="fw-bold fs-3">$<%= reservation.total_price %></span>USD</p>
          </div>
          <div class="col-12 text-center">
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#qualificationModal"
            onclick="changeReservation(<%= reservation.id %>)">
              Finish
            </button>
          </div>
        </div>
      </div>


    </div>
  </div>
</div>
